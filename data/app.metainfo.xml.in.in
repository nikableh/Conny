<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@app-id@</id>

  <name>@app-name@</name>
  <summary>@short-description@</summary>

  <metadata_license>CC0</metadata_license>
  <project_license>@license@</project_license>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <description>
    <p>
      @description@.
    </p>
  </description>

  <launchable type="desktop-id">@app-id@.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <image>https://www.wikipedia.org/portal/wikipedia.org/assets/img/Wikipedia-logo-v2.png</image>
      <caption>TODO FIXME</caption>
    </screenshot>
    <screenshot>
      <image>https://www.wikipedia.org/portal/wikipedia.org/assets/img/Wikipedia-logo-v2.png</image>
      <caption>TODO FIXME</caption>
    </screenshot>
    <screenshot>
      <image>https://www.wikipedia.org/portal/wikipedia.org/assets/img/Wikipedia-logo-v2.png</image>
      <caption>TODO FIXME</caption>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

  <url type="homepage">^URL^</url>
  <url type="bugtracker">^URL_ISSUES^</url>

  <releases>
    <release version="0.1.0" date="1901-01-01" />
  </releases>

  <developer id="^TOP_LEVEL_DOMAIN^.^DOMAIN_NAME^">
    <name>^AUTHOR_NAME^</name>
  </developer>

  <branding>
    <color type="primary" scheme_preference="light">#c2ba5b</color>
    <color type="primary" scheme_preference="dark">#993d3d</color>
  </branding>

  <update_contact>^AUTHOR_EMAIL^</update_contact>
  <translation type="gettext">@gettext-package@</translation>
</component>
